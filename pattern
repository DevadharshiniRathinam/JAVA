package pattern;
import java.util.*;
public class pattern {
	public static void main(String[] arg)
	{ 
		Scanner s=new Scanner(System.in);
	int	n=s.nextInt();
	int j;
	char x= (char) (64+n);
		for(int i=0;i<n;i++)
		{
			for( j=n-i;j<=n&&j>0;j--)
			{
				System.out.print(x);
			}
			System.out.println();
			x--;
		}
			
		}
	

}
