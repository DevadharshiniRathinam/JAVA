package pattern;

import java.util.Scanner;

public class pattern3 
{
	public static void main(String[] args) 
	{
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int i,j,n1=n;
		for(i=1;i<=n;i++)
		{
			 if(i>1)
			 {
				 for(j=1;j<=i;j++)
				 {
				 System.out.print(" ");
				 }
			 }
			 if(i<n-1)
			 {
			 System.out.print(i);
			 }
			 for(j=n-i;j<n-1&&j>0;j--)
			 {
			 System.out.print(" ");
			 }

			 if(i<n-2)
			 {
			 System.out.println(n1--);	
			 }
			
		}
		
	}
}
